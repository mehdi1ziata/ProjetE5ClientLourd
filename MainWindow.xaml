<Window x:Class="PPEProjet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="368" Width="368" FontSize="14" Background="#04c582">
    <Border Background="#2e3137" CornerRadius="20" Margin="20">
        <StackPanel Margin="20,20,20,4" RenderTransformOrigin="0.5,0.5">
            <StackPanel.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.176"/>
                    <TranslateTransform/>
                </TransformGroup>
            </StackPanel.RenderTransform>
            <Label Content="Connexion" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            <Separator Background="#FFA0A0A0"/>
            <Label Content="Identifiant" Foreground="White"/>
            <TextBox x:Name="txtUsername" Background="#545d6a" Foreground="White" FontSize="18"/>
            <Label Content="Mot de passe" Foreground="White"/>
            <PasswordBox x:Name="txtPassword" Background="#545d6a" Foreground="White" FontSize="18"/>
            <Button x:Name="btnLogin" Click="btnLogin_Click" Content="Connexion" Margin="60 10" Background="#4CAF50" Foreground="White" FontSize="18"/>
        </StackPanel>
    </Border>
</Window>